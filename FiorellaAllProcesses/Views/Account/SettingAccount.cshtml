@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="_AccountIdentityHeaderPartial" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="row w-100 m-0">
                <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                    <div class="card col-lg-4 mx-auto mt-5">
                        <div class="mt-3">
                            @if (ViewBag.IsSuccessMail == true)
                            {
                                <div class="alert alert-success" role="alert">
                                    Mail has been updated succesfully.
                                </div>
                            }
                            @if (ViewBag.IsSuccessPassword == true)
                            {
                                <div class="alert alert-success" role="alert">
                                    Password has been updated succesfully
                                </div>
                            }
                            @if (ViewBag.IsSuccessUsername == true)
                            {
                                <div class="alert alert-success" role="alert">
                                    Username has been updated succesfully
                                </div>
                            }
                            
                        </div>
                        <div class="card-body px-5 pb-5 pt-3">
                            <h3 class="card-title text-left mb-3 d-flex justify-content-center">Setting</h3>
                            <a class="btn btn-primary d-flex justify-content-center mb-3" asp-controller="Account" asp-action="ChangeMail">Mail</a>
                            <a class="btn btn-primary d-flex justify-content-center mb-3" asp-controller="Account" asp-action="ChangeUsername">Username</a>
                            <a class="btn btn-primary d-flex justify-content-center mb-3" asp-controller="Account" asp-action="ChangePassword">Password</a>
                            <a class="btn btn-secondary d-flex justify-content-center" asp-controller="Home" asp-action="Index">Cancel</a>
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->
            </div>
            <!-- row ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>

    <partial name="_AccountIdentityFooterPartial" />
</body>
</html>