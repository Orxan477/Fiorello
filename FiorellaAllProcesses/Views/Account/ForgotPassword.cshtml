@model PasswordMailVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="_AccountIdentityHeaderPartial" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="row w-100 m-0">
                <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                    <div class="card col-lg-4 mx-auto">
                        <div class="mt-3">
                            @if (ViewBag.IsSuccessReset == true)
                            {
                                <div class="alert alert-success" role="alert">
                                    A link has been sent to the email to change the password. Please check your mailbox.
                                </div>
                            }
                        </div>
                            <div class="card-body px-5 pb-5 pt-3">
                                <h3 class="card-title text-left mb-3">Forgot Password</h3>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <form method="post">
                                    <div class="form-group">
                                        <label asp-for="Email" ></label>
                                        <input asp-for="Email" class="form-control p_input" placeholder="Email">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary btn-block enter-btn">Send Mail</button>
                                        <a class="btn btn-secondary btn-block enter-btn" asp-controller="Account" asp-action="Login">
                                            Login
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                <!-- content-wrapper ends -->
            </div>
            <!-- row ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>

    <partial name="_AccountIdentityFooterPartial" />
</body>
</html>