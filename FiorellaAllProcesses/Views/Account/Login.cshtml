@model LoginVm
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <partial name="_AccountIdentityHeaderPartial" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="row w-100 m-0">
                <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                    <div class="card col-lg-4 mx-auto">
                        <div class="mt-3">
                            @if (ViewBag.IsSuccessVerify == true)
                            {
                                <div class="alert alert-success" role="alert">
                                    You are Welcome. Confirm Successful.
                                </div>
                            }
                         </div>
                        <div class="card-body px-5 pb-5 pt-3">
                            <h3 class="card-title text-left mb-3">Login</h3>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <form method="post">
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input asp-for="Email" class="form-control p_input" placeholder="Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" class="form-control p_input" placeholder="Password">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    Remember Me: <input asp-for="RememberMe">
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-block enter-btn">Login</button>
                                </div>
                                <div class="d-flex">
                                    <button class="btn btn-facebook mr-2 col">
                                        <i class="mdi mdi-facebook"></i> Facebook
                                    </button>
                                    <button class="btn btn-google col">
                                        <i class="mdi mdi-google-plus"></i> Google plus
                                    </button>
                                </div>
                                <p class="sign-up">Don't have an Account?<a asp-controller="Account" asp-action="Register"> Sign Up</a></p>
                                <p class="sign-up"><a asp-controller="Home" asp-action="Index">Home</a></p>
                                <p class="sign-up"><a asp-controller="Account" asp-action="ForgotPassword">Forgot Password</a></p>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->
            </div>
            <!-- row ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <partial name="_AccountIdentityFooterPartial" />
</body>
</html>