@model HomeVM
@{
    ViewData["Title"] = "Index";

    int productNum = 1;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Products</h4>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>№</th>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>Category</th>
                                        <th>Price</th>
                                        <th>Settings</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.Products)
                                    {
                                        <tr>
                                            <td>@productNum</td>
                                            <td>
                                                <img src="~/img/@product.ProductImage.FirstOrDefault().Image" alt=""/>
                                            </td>
                                            <td>@product.Name</td>
                                            <td>@product.Category.Name</td>
                                            <td>@product.Currency.Character @product.Price</td>
                                            <td>
                                                <label class="btn btn-primary " asp-action="Detail" asp-route-id="@product.Id">
                                                    <i class="mdi mdi-eye"></i>
                                                </label>
                                            </td>
                                            <td>
                                                <a asp-action="Update" asp-route-id="@product.Id">
                                                    <label class="btn btn-warning">
                                                        <i class="mdi mdi-table-edit"></i>
                                                    </label>
                                                </a>
                                            </td>
                                            <td>
                                                <form asp-action="Delete" asp-route-id="@product.Id" method="post" class="d-inline">
                                                    <label class="btn btn-danger" >
                                                        <i class="mdi mdi-delete"></i>
                                                    </label>
                                                </form>
                                               
                                            </td>
                                        </tr>
                                        productNum++;
                                    }

                                </tbody>
                            </table>
                            <br />
                            <a asp-area="Admin" asp-controller="Flower" asp-action="Create"><label class="btn btn-success d-flex justify-content-center">Create Flower</label></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:partials/_footer.html -->
    @await Component.InvokeAsync("AdminFooter")
    <!-- partial -->
</div>

