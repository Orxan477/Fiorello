@model CreateProductVM
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <row>
        <div class="col-md-6 grid-margin stretch-card mt-5">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"></h4>
                    <form class="forms-sample" method="post">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" placeholder="Name">
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Price"></label>
                            <input asp-for="Price" class="form-control" placeholder="Price">
                            <span class="text-danger" asp-validation-for="Price"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="СurrencyId">Currency</label>
                            <select asp-for="СurrencyId" asp-items="ViewBag.currency" class="form-select" aria-label="Default select example">
                                <span class="text-danger" asp-validation-for="СurrencyId"></span>
                            </select>

                        </div>
                        <div class="form-group">
                            <label asp-for="CategoryId">Category</label>
                            <select asp-for="CategoryId" asp-items="@ViewBag.category" class="form-select" aria-label="Default select example">
                                <span class="text-danger" asp-validation-for="CategoryId"></span>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Photos"></label>
                            <input asp-for="Photos" class="form-control" placeholder="Price">
                            <span class="text-danger" asp-validation-for="Photos"></span>
                            
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <button class="btn btn-light" asp-action="Index">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </row>
</div>





